@model SSP.Models.CreationModel.SignIn

<!-- Navbar -->
@if (TempData["AlertMessage"] != null)
{
    if (TempData["AlertMessage"].ToString().Contains("Error"))
    {
        <div class="alert alert-danger">
            <strong>An Error Occur !</strong> @TempData["AlertMessage"]
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <strong>Success !</strong> @TempData["AlertMessage"]
        </div>
    }
}
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #4CAF50;">
    <!-- Container wrapper -->
    <div class="container">
        <!-- Navbar brand -->
        <a class="navbar-brand" href="#">
            <img src="/images/logo1.png" alt="Logo" class="img-fluid my-0 mx-0" loading="lazy" style="max-width: 280px; max-height: 45px; margin-top: -1px;">
        </a>
       

        <!-- Toggle button -->
        <button class="navbar-toggler"
                type="button"
                data-mdb-toggle="collapse"
                data-mdb-target="#navbarButtonsExample"
                aria-controls="navbarButtonsExample"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Collapsible wrapper -->
        <div class="collapse navbar-collapse" id="navbarButtonsExample">
            <!-- Left links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                
            </ul>
            <!-- Left links -->

            <div class="d-flex align-items-center">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-white" aria-current="page" href="@Url.Action("SignIn", "Login")">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">ABOUT US</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">FAQ's</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">CONTACT US</a>
                    </li>
                    <li class="nav-item">
                        <i class="fa fa-sign-in text-white" aria-hidden="true"></i>
                        <a class="nav-link text-white" href="#">ADMIN</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- Collapsible wrapper -->
    </div>
    <!-- Container wrapper -->
</nav>
<!-- Navbar -->
<style>
    .navbar-nav li {
        display: flex;
        align-items: center;
        padding: 0 10px;
    }

        .navbar-nav li i {
            margin-right: 2px;
        }
</style>
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">

            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="/images/img.jpg"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-sm-12 col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <div class="mx-auto text-center my-2">
                    <img src="assets/images/user.png" alt="" srcset="" width="75">
                    <p>Please login to access your portal</p>
                </div>
                @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
                {
                    <form>
                        <!-- Select input -->
                    @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            @*   @Html.LabelFor(model => model.UserType, htmlAttributes: new { @class = "control-label required-star" })*@
                            <strong> Select UserType :</strong><br />
                            @Html.DropDownListFor(model => model.UserType,ViewBag.TaxPayerTypeList as SelectList,  "Select Tax Payer Type",  new { @class = "form-control bs-select", @tabindex = "1", @data_live_search = "true", @id = "cboFromTaxPayerType" })
                            @Html.ValidationMessageFor(model => model.UserType, "", htmlAttributes: new { @class = "help-block" })
                        </div>
                        <div class="form-group">
                            <strong> Enter PhoneNumber or RIN :</strong><br />
                            @Html.TextBoxFor(Model => Model.PhoneNumber_RIN, new { @class = "form-control", @autocomplete = "off", @tabindex = "1", @placeholder = "Enter PhoneNumber or RIN" })
                            @Html.ValidationMessageFor(Model => Model.PhoneNumber_RIN, "", new { @class = "help-block" })
                        </div>
                        <div class="form-group">

                            <strong> Enter Password :</strong><br />
                            @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @autocomplete = "off", @tabindex = "2", @placeholder = "Enter Password", @type = "password" })
                            @Html.ValidationMessageFor(Model => Model.Password, "", new { @class = "help-block" })
                        </div>
                  

                        <div class="d-flex justify-content-between align-items-center">
                            <!-- Checkbox -->
                            <div class="form-check mb-0">
                                <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                                <label class="form-check-label" for="form2Example3">
                                    Remember me
                                </label>
                            </div>
                            <a href="@Url.Action("ForgetPassword", "Login")" class="" style="color:#00834E; text-decoration: none;">Forgot password?</a>
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <div class="d-grid gap-2 col-6 mx-auto">
                                <button class="btn text-white" type="submit" style="padding-left: 2.5rem; padding-right: 2.5rem; border-radius: 30px; background-color: #4CAF50 !important;">Login</button>
                            </div>
                            <p class="small fw-bold mt-2 pt-1 mb-0 text-center">
                                Don't have an account? <a href="@Url.Action("CreateAccountStepOne", "Login")" class="link-success" style="text-decoration: none;">Create Account</a>
                            </p>
                        </div>


                    </form>
                }
            </div>
        </div>
    </div>
</section>
<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    media (max-width: 450px) {
        .h-custom

    {
        height: 100%;
    }

    }

    .password-field {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
    }

        .password-toggle i {
            font-size: 18px;
            color: #999;
        }

        .password-toggle.active i {
            color: #333;
        }

</style>
